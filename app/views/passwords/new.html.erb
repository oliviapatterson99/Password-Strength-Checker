<% content_for :title, "New password" %>
<header class="relative bg-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold tracking-tight text-gray-900">Add a New Password</h1>
  </div>
</header>
<div>
  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-6">
      <%= render "form", password: @password %>
    </div>
  </div>
  <div class="mt-6 flex items-center justify-start gap-x-6">
    <div class="text-sm/6 font-semibold text-gray-900">
      <%= link_to "Back to passwords", passwords_path %>
    </div>
  </div>
</div>